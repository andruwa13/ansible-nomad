client {
  enabled = {{ nomad['client']['enabled'] | default(false) | bool | lower }}
  meta {
    "managed_by" = "ansible"
  }
{% if nomad['server'] %}
  node_class = "server"
  reserved {
    cpu    = 500
    memory = 500
    disk   = 2500
  }
{% else %}
  node_class = "client"
{% endif %}
{% if not consul['enabled'] %}
  server_join {
    retry_join = {{ bootstrap['address'] | default('0.0.0.0') | to_json }}
    retry_interval = "15s"
  }
{% endif %}
}
